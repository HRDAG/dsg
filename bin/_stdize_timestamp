#! /usr/bin/env zsh
# https://unix.stackexchange.com/questions/1524
# update timestamps in cwd and below to time of README.md
# check for README.md  task1  task2
# touch time format: [[CC]YY]MMDDhhmm[.SS]

STATUS=$(touch --version)
if [[ $? -ne 0 ]]; then
    echo "must use gnu touch, chk path, install gnu coreutils if necessary"
    exit 1
fi

if [[ -f "README.md" && -d "task1" && -d "task2" ]]; then
    find . -type f -exec touch -h --date "2024-01-17 19:56:23.778041463 -0800" {} +
else
    echo "must be in top-level of data/ directory to run, failing"
    exit 1
fi
# done.

